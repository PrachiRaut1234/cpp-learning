#include<bits/stdc++.h>
using namespace std;

bool knows(vector<vector<int>>& M, int a , int b){
    return M[a][b] == 1;
}
int celebrity(vector<vector<int>>& M, int n){
    stack<int> s;
    
    for(int i = 0; i < n; i++)
    {
        s.push(i);
    }
    while(s.size() > 1){
        int a = s.top();s.pop();
        int b = s.top();s.pop();
        
        if(knows(M,a,b)){
            s.push(b);
        }else{
            s.push(a);
        }
    }
    int candidate= s.top();
    
    for(int i = 0; i < n; i++){
        if(M[candidate][i] != 0)return -1;
    }
    for(int i = 0;i < n; i++){
        if(i != candidate && M[i][candidate] != 1) return -1;
    }
    return candidate;
}
int main(){
    vector<vector<int>> M = {
        {0,1,0},
        {0,0,0},
        {0,1,0}
    };
    int n = 3;
    cout << "celebrity is: "<<celebrity(M,n)<< endl;
    return 0;
}
