#include <iostream>
#include <stack>
#include <string>
using namespace std;

bool isValid(string expression) {
    stack<char> s;
    
    for (char ch : expression) {
        if (ch == '(' || ch == '{' || ch == '[') {
            s.push(ch);
        }
        else if (ch == ')' || ch == '}' || ch == ']') {
            if (s.empty()) return false; 
            char top = s.top();
            if ((top == '(' && ch == ')') || 
                (top == '{' && ch == '}') || 
                (top == '[' && ch == ']')) {
                s.pop();
            } else {
                return false; 
            }
        }
    }
    
    return s.empty();
}

int main() {
    string expression;
    cout << "Enter expression: ";
    cin >> expression; 

    if (isValid(expression)) {
        cout << "Valid expression\n";
    } else {
        cout << "Invalid expression\n";
    }

    return 0;
}
