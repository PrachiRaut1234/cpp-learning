#include <iostream>
#include <stack>
#include <string>
using namespace std;

string reverseString(string str) {
    stack<char> s;  

    for (int i = 0; i < str.length(); i++) {
        s.push(str[i]);
    }

    string result = "";  

   
    while (!s.empty()) {
        result += s.top();  
        s.pop();            
    }

    return result;  
}

int main() {
    string input;
    cout << "Enter a string: ";
    getline(cin, input);

    string reversed = reverseString(input);  

    cout << "Reversed string: " << reversed << endl;

    return 0;
}
