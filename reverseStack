#include<iostream>
#include<stack>
using namespace std;

void insertAtBottom(stack<int>& s, int x){
    if(s.empty()){
        s.push(x);
        return;
    }
    int num = s.top();
    s.pop();
    insertAtBottom(s,x);
    s.push(num);
}
void reverseStack(stack<int>& s){
    if(s.empty()) return;
    
    int num = s.top(); 
    s.pop();
    
    reverseStack(s);
    
    insertAtBottom(s , num);
}
int main(){
    stack<int> s;
    
    s.push(10);
    s.push(20);
    s.push(30);
    
    cout<< "Original stack (top to bottom): " ;
    stack<int> temp = s;
    while(!temp.empty()){
        cout << temp.top() << " ";
        temp.pop();
    }
    cout << endl;

    reverseStack(s);

    cout << "Reversed stack (top to bottom): ";
    while (!s.empty()) {
        cout << s.top() << " ";
        s.pop();
    }
    cout << endl;

    return 0;
}
