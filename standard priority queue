#include <iostream>
#include <queue>
using namespace std;

int main() {
    priority_queue<int> pq; // max-heap by default

    pq.push(50);
    pq.push(10);
    pq.push(30);

    cout << "Top element: " << pq.top() << endl; // 50
    pq.pop();
    cout << "Top after pop: " << pq.top() << endl; // 30

    // Min-heap
    priority_queue<int, vector<int>, greater<int>> minpq;
    minpq.push(50);
    minpq.push(10);
    minpq.push(30);
    cout << "Min-heap top: " << minpq.top() << endl; // 10

    return 0;
}
